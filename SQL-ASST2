create database bookstore
USE bookstore
CREATE TABLE book_detail
(
  book_id INT NOT NULL IDENTITY  PRIMARY KEY,
  book_name  VARCHAR(50),
  book_genre  VARCHAR(50),
  book_price  INT,
  book_author VARCHAR(50)
);
DROP  TABLE user_detail

