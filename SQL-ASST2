CREATE TABLE user_detail
(
  [user_id] INT NOT NULL IDENTITY  PRIMARY KEY,
  [user_name]  VARCHAR(50),
  user_no  BIGINT
);


ALTER TABLE user_detail ALTER COLUMN user_no BIGINT

